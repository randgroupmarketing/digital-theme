<div class="row"> {# container-fluid #}
	<div class="">{# row #}

		<div >
				<div class="col-md-12 span12">
					<div class="resource-thumbs">
							<div class="">{# row #}

								{% for key, posts in post_by_category %}
									<div class="col-md-12">	
										<div class="span12"><h3>{{ posts.name }}</h3></div>
										<div class=""> {# row #}	
										{% for key2, postr in posts.posts %}	
											<div class="col-md-4 span4 resource-item" >
												<div >
													<div class="resource-item-wrap equal">
														<a class="download-link" href="{{ postr.post_link }}" >
														<div class="resource-item-cover">
															{{ postr.post_image}}
														</div>
														<div class="resource-item-details">
															<div class="resource-item-title">{{ postr.post_title }} <p class="count">Downloaded({{postr.downloaded}})</p>
															</div>
														</div>	
														</a>
													</div>
												</div>
											</div>
										{%  endfor %}	
											</div>
										</div>								
								{%  endfor %}
							</div>

					</div>
				</div>
		</div>

	</div>
</div>
